{% extends 'baseBack.html.twig' %}
{% block change %}
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                <h4 class="card-title">modifier compte</h4>
                <div class="form-group">
                        <label for="exampleInputUsername1">Nom d'utilisateur</label>
                        {{ form_widget(form.username, {'attr': {'class': 'form-control form-control-user' }} ) }}
                        {{ form_errors(form.username) }}
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">nom</label>
                        {{ form_widget(form.nom , {'attr': {'class': 'form-control form-control-user' }} ) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">prenom</label>
                        {{ form_widget(form.prenom , {'attr': {'class': 'form-control form-control-user' }} ) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                    <div class="form-group">
                        <label for="exampleInputConfirmPassword1">age</label>
                        {{ form_widget(form.age , {'attr': {'class': 'form-control form-control-user' }} ) }}
                        {{ form_errors(form.age) }}
                    </div>
                    <div class="form-group">
                        <label for="exampleInputConfirmPassword1">adresse mail</label>
                        {{ form_widget(form.adresseMail, {'attr': {'class': 'form-control form-control-user' }} ) }}
                        {{ form_errors(form.adresseMail) }}
                    </div>
                    <div class="form-group">
                        <label for="exampleInputConfirmPassword1">mot de passe </label>
                        {{ form_widget(form.motDePasse, {'attr': {'class': 'form-control form-control-user' }} ) }}
                        {{ form_errors(form.motDePasse) }}
                    </div>
                    <div class="form-group">
                        <label for="exampleInputConfirmPassword1">numéro de téléphone</label>
                        {{ form_widget(form.numTel, {'attr': {'class': 'form-control form-control-user' }} ) }}
                        {{ form_errors(form.numTel) }}
                    </div>
                    <div class="btn btn-primary mr-2">{{ include('compte/_form.html.twig', {'button_label': 'modifier'}) }}</div>
                    <div class="btn btn-light">{{ include('compte/_delete_form.html.twig' , {'button_label': 'supprimer'}) }}</div>
                {{ form_end(form)  }}
            </div>
        </div>
    </div>
{% endblock %}