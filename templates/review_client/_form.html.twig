{% extends 'baseFront.html.twig' %}

{% block slider %}
{% endblock %}

{% block change%}
{{ form_start( form ,{'attr':{'novalidate':'novalidate'}}) }}

    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">





    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <form class="forms-sample">
                    <div class="form-group">
                        {{ form_label(form.nomClientReview) }}
                        {{ form_widget(form.nomClientReview , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Nom..'}} ) }}
                        {{ form_errors(form.nomClientReview) }}
                    </div>
                    <div class="form-group">

                        {{ form_label(form.descriptionReview) }}
                        {{ form_widget(form.descriptionReview , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Description..'}} ) }}
                        {{ form_errors(form.descriptionReview) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.nomCoachReview) }}
                        {{ form_widget(form.nomCoachReview , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Coach username...'}} ) }}
                        {{ form_errors(form.nomCoachReview) }}

                    </div>
                    <div class="form-group">





                        {{ form_label(form.rating) }}
                        {#  #}
                        {% set status = true %}
                        {% if status == true %}
                            {# {% do form.rating.setRendered() %}  #}
                        {% endif %}
                        <div class="stars">
                            <i class="lar la-star fa-3x" data-value="1"></i>
                            <i class="lar la-star fa-3x" data-value="2"></i>
                            <i class="lar la-star fa-3x" data-value="3"></i>
                            <i class="lar la-star fa-3x" data-value="4"></i>
                            <i class="lar la-star fa-3x" data-value="5"></i>
                        </div>

                        <input type="hidden" name="note" id="note" value="0">

                        <script src="{{asset('scripts.js')}}"></script>

                    </div>
                    <div class="form-group">

                        {{ form_label(form.dateReview) }}

                        {{ form_widget(form.dateReview , {'attr': {'class': 'hidden-row' ,
                            value: "now"|date('Y-m-d H:i:s', timezone="Europe/Paris")}} ) }}

                        {{ form_errors(form.dateReview) }}

                    </div>

                    <button class="btn">{{ button_label|default('save') }}</button>

                    <a href="{{ path('review_client_index') }}" class="btn btn-primary">back to list</a>

                    <div id="hidden_rating" style="display: none;">
                        {{ form_row(form.rating) }}
                        {{ form_widget(form.rating, { 'attr': {'class': 'hidden-row'} }) }}
                    </div>

                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>


{% endblock %}