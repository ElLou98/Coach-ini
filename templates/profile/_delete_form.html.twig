<form class="mt-1" method="post" action="{{ path('profile_delete', {'id': profile.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ profile.id) }}">
    <button style="width: 100px" class="btn btn-danger">Delete</button>
</form>
