{% extends 'baseFront.html.twig' %}


{% block title %}Actualite{% endblock %}

{% block slider %}
{% endblock %}
    {% block change %}
<div class="container">
    <div style="margin-top: 40px">
        <h1 class="ml3" style="margin-top: 40px; margin-bottom: 40px" >Actuality</h1>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js">
        </script>
        <script src="{{ asset('front/js/MovingText.js') }}"></script>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Statut</th>
                <th>Image</th>
                <th>Fichier</th>
                <th>Bio</th>
                <th>Competence</th>
                <th>Datepub</th>
                <th>Like/Deslike</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actualite in actualites %}
            <tr>
                <td style="display: flex;align-items: center;justify-content: center;width: 100%;height: 100%">{{ actualite.statut }}</td>
                <td><img src="/ProfileImages/{{ asset( actualite.image )  }}" width="200" height="200"> </td>
                <td ><a target="_blank" href="/ActualiteFiles{{ asset(actualite.fichier ) }}">{{ actualite.fichier  }}</a></td>
                <td>{{ actualite.bio }}</td>
                <td>{{ actualite.competence }}</td>
                <td>{{ actualite.datepub ? actualite.datepub|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <div style="display: flex;align-items: center;justify-content: center">
                        <a  href="{{ path('like', {'id': actualite.id}) }}"><img src="https://img.icons8.com/material-sharp/24/000000/facebook-like--v1.png"/></a><p style="display:flex;align-items:center;justify-content:center;width:30px;height:30px;margin:5px ;background-color: #0d57ff;color: #ffffff">{{ actualite.likepub }}</p>
                        <a  href="{{ path('deslike', {'id': actualite.id}) }}"><img src="https://img.icons8.com/material-sharp/24/000000/thumbs-down.png"/></a>
                    </div>

                </td>

                <td>
                    <a class="btn btn-info" href="{{ path('actualite_show', {'id': actualite.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   {{ knp_pagination_render(actualites) }}

</div>

{% endblock %}




