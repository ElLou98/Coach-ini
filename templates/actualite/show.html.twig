{% extends 'baseFront.html.twig' %}


{% block title %}Actualite{% endblock %}

{% block slider %}
{% endblock %}
    {% block change %}
        <div class="container">
    <h1>Actualite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ actualite.statut }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src="/ProfileImages/{{ asset( actualite.image )  }}" width="200" height="200"></td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td><a target="_blank" href="/ActualiteFiles{{ asset(actualite.fichier ) }}">{{ actualite.fichier  }}</a></td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ actualite.bio }}</td>
            </tr>
            <tr>
                <th>Competence</th>
                <td>{{ actualite.competence }}</td>
            </tr>
            <tr>
                <th>Likepub</th>
                <td>{{ actualite.likepub }}</td>
            </tr>
            <tr>
                <th>Datepub</th>
                <td>{{ actualite.datepub ? actualite.datepub|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a  class="btn btn-warning mt-1" href="{{ path('actualite_edit', {'id': actualite.id}) }}">edit</a>

    {{ include('actualite/_delete_form.html.twig') }}
        <a class="mt-1" href="{{ path('actualite_index') }}">back to list</a>
        </div>
{% endblock %}
