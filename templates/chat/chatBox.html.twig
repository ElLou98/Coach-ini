    {% block change %}
        <div class="container">
            <h1>Coach'ini Chat</h1>
            <ul id="ws-notif-receiver" class="chat-messages-list"></ul>
            {% for message in messages %}
                {% if (message.destinataire==me and message.expediteur==friend)or(message.destinataire==friend and message.expediteur==me) %}
                    {% if message.expediteur==me %}
                        <ul class="chat-messages-list">
                            <li class="">
                                <strong> {{message.expediteur}} </strong>: {{ message.contenumessage }}
                                &nbsp;&nbsp;&nbsp;&nbsp;<a href="{{ path('message_edit', {'idmessage': message.idmessage}) }}" class="btn btn-primary">
                                    Editer
                                </a>
                            </li>
                        </ul>
                    {% else %}
                    <ul class="chat-messages-list">
                        <li class="">
                            <strong> {{message.expediteur}} </strong>: {{ message.contenumessage }}
                        </li>
                    </ul>
                {% endif %}
                {% endif %}
            {% endfor %}
