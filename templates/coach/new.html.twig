{% block change %}
    <div class="col-lg-7 col-md-7 col-12">
        <!-- Contact Form -->
        <div class="contact-form-area m-top-30">
            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

            <div class="row">
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="form-group">
                        <div class="icon"><i class="fa fa-user"></i></div>
                        {{ 'User name' }}
                        {{ form_widget(form.username, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'User Name'}} ) }}
                        {{ form_errors(form.username) }}
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="form-group">
                        <div class="icon"><i class="fa fa-user"></i></div>
                        {{ 'Last Name' }}
                        {{ form_widget(form.nom , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Last Name'}} ) }}
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="form-group">
                        <div class="icon"><i class="fa fa-envelope"></i></div>
                        {{ 'First Name' }}
                        {{ form_widget(form.prenom , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'First name'}} ) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="form-group">
                        <div class="icon"><i class="fa fa-tag"></i></div>
                        {{ form_label(form.age) }}
                        {{ form_widget(form.age , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Age'}} ) }}
                        {{ form_errors(form.age) }}
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="form-group">
                        <div class="icon"><i class="fa fa-user"></i></div>
                        {{ 'Email Address' }}
                        {{ form_widget(form.adresseMail, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Email Address'}} ) }}
                        {{ form_errors(form.adresseMail) }}
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="form-group">
                        <div class="icon"><i class="fa fa-user"></i></div>
                        {{ 'Password' }}
                        {{ form_widget(form.motDePasse, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Password'}} ) }}
                        {{ form_errors(form.motDePasse) }}
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="form-group">
                        <div class="icon"><i class="fa fa-user"></i></div>
                        {{ 'Phone number' }}
                        {{ form_widget(form.numTel, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Phone number'}} ) }}
                        {{ form_errors(form.numTel) }}
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="form-group">
                        <div class="icon"><i class="fa fa-user"></i></div>
                        <p>I'm not a rebot</p>
                        {{ form_widget(form.captchaCode, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'captchaCode'}} ) }}

                    </div>
                </div>
                {% set formErrors = form.vars.errors.form.getErrors(true) %}

                {% if formErrors|length %}
                    <div class="alert alert-danger">
                        <ul>
                            {% for error in formErrors %}
                                <li>{{ error.message }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
                <div class="col-12">
                    <div class="form-group button">
                        <button class="bizwheel-btn theme-2">{{ button_label|default('Create') }}</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <!--/ End contact Form -->
    </div>



{% endblock %}
