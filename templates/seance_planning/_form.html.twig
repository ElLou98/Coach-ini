{% extends 'frontCoach.html.twig' %}

{% block slider %}
{% endblock %}

{% block change%}
    {{ form_start( form ,{'attr':{'novalidate':'novalidate'}}) }}

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <form class="forms-sample">
                    <div class="form-group">
                        {{ form_label(form.userName) }}
                        {{ form_widget(form.userName , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Your username...'}} ) }}
                        {{ form_errors(form.userName) }}
                    </div>
                    <div class="form-group">

                        {{ form_label(form.summary) }}
                        {{ form_widget(form.summary, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Title...'}} ) }}
                        {{ form_errors(form.summary) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Description...'}} ) }}
                        {{ form_errors(form.description) }}

                    </div>
                    <div class="form-group">

                        {{ form_label(form.date) }}

                        {{ form_widget(form.date , {'attr': {'class': 'hidden-row' ,
                            value: "now"|date('Y-m-d', timezone="Europe/Paris")}} ) }}

                        {{ form_errors(form.date) }}

                    </div>
                    <div class="form-group">
                        {{ form_label(form.startsAt) }}
                        {{ form_widget(form.startsAt , {'attr': {'class': 'hidden-row' ,
                            value: "now"|date('H:i:s', timezone="Europe/Paris")}} ) }}
                        {{ form_errors(form.startsAt) }}

                    </div>
                    <div class="form-group">
                        {{ form_label(form.finishsAt) }}
                        {{ form_widget(form.finishsAt , {'attr': {'class': 'hidden-row' ,
                            value: "now"|date('H:i:s', timezone="Europe/Paris")}} ) }}
                        {{ form_errors(form.finishsAt) }}

                    </div>
                    <div class="form-group">
                        {{ form_label(form.localisation) }}
                        {{ form_widget(form.localisation , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'localisation...'}} ) }}
                        {{ form_errors(form.localisation) }}

                    </div>

                    <button class="btn">{{ button_label|default('save') }}</button>

                    <a href="{{ path('seance_planning_index') }}" class="btn btn-primary">back to list</a>



                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>



{% endblock %}
